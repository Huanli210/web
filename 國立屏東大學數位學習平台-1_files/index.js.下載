// 課程列表設定參數
$(document).ready(new function() {
  	
    // Prepare layout options.
    var options = {
        autoResize: true, // This will auto-update the layout when the browser window is resized.
        container: $('#main'), // Optional, used for some extra CSS styling
        offset: 2, // Optional, the distance between grid items
        itemWidth: 250, // Optional, the width of a grid item
        align: 'center'
    };

    // Get a reference to your grid items.
    var handler = $('#tiles li');
    // Call the layout function.
    if (handler.length > 0) {
        handler.wookmark(options);
    } else {
        // 如果沒有開啟課程列表，則對齊空的 div
        var options = {
            autoResize: true, // This will auto-update the layout when the browser window is resized.
            container: $('#align-div'), // Optional, used for some extra CSS styling
            offset: 2, // Optional, the distance between grid items
            itemWidth: 250, // Optional, the width of a grid item
            align: 'center'
          };

          var handler = $('#align-div .item');
          handler.wookmark(options);
    }
    // 沒有開啟課程列表會沒有 getCourseList() ，加上判斷
    if ('undefined' !== typeof getCourseList) {
        getCourseList('getSigningCourses', 'btnSigning');
        // getVideoList('getTreeVideos', 'default');
        /** Custom(B) By Steve --預設改抓最新影片資料 20161018 **/
		getVideoList('getTreeVideos', 'new');
        /** Custom(E) By Steve **/
    }
    $("input").placeholder();
});

// 讓懸浮的歷史課程和開課中課程按鈕變色效果
$(function() {
    $('#rcorners2').click(function() {
        $(this).css('background-color', '#e55756');
        $('#rcorners3').css('background-color', '#ABAAAA');
    });
    $('#rcorners3').click(function() {
        $(this).css('background-color', '#048e89');
        $('#rcorners2').css('background-color', '#ABAAAA');
    });
});