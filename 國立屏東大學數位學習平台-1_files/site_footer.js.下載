// 頁尾
// 點選WECHAT圖示
$('.footer #share-wct').fancybox({
    'titlePosition': 'inline',
    'transitionIn': 'none',
    'transitionOut': 'none',
    'type': 'iframe',
    'width': 350,
    'height': 350,
    'autoSize': false,
    helpers : {
        overlay : {
            locked : false
        }
    }
});

// 點選LINE分享圖示
$('.footer .ln').click(function() {
    // 判斷式否為觸控裝置
    var touchable = 'createTouch' in document;
    if (touchable === false) {
        $(".footer #share-ln").fancybox({
            'titlePosition': 'inline',
            'transitionIn': 'none',
            'transitionOut': 'none',
            helpers : {
                overlay : {
                    locked : false
                }
            }
        });
    } else {
        location.href = 'http://line.naver.jp/R/msg/text/?' + metaDescription + '%0D%0A' + appRoot;
    }
});

$('.tips').click(function() {
  $("#tips").fancybox({
    'titlePosition': 'inline',
    'transitionIn': 'none',
    'transitionOut': 'none',
    helpers : {
      overlay : {
        locked : false
      }
    }
  });
});
var chgMobileWeb = function () {
    $.cookie("pcweb", 0, { expires: 1, path:'/', domain: generalDomain });
    $.cookie("mobileweb", 1, { expires: 1, path:'/', domain: generalDomain });
    location.reload();
}
var downloadIos = function () {
    window.open(iosAppStoreUrl,'_blank');
}
var downloadAndroid = function () {
    window.open(androidPlayStoreUrl,'_blank');
}
$(document).ready(function () {
    $("#mobile-func .btn-mobile").on('click', chgMobileWeb);
    $("#mobile-func .btn-ios").on('click', downloadIos);
    $("#mobile-func .btn-android").on('click', downloadAndroid);
    if(isShowTips){
      $('.tips').click();
    }
});